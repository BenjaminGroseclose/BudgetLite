<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Password" Class="mr-3 mb-n1"/>
            Confirm Password Update
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">Are you sure you want to update your password?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Confirm">Confirm</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public int userID { get; set; }

    public void Cancel()
    {
        MudDialog.Cancel();
    }

    public void Confirm()
    {
        MudDialog.Close();
    }
}
