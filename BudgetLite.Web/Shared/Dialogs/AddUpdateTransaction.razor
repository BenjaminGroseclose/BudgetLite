<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CurrencyExchange" Class="mr-3 mb-n1"/>
            Add Transaction
        </MudText>
    </TitleContent>
    <DialogContent>

    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public int UserID { get; set; }
    [Parameter] public Transaction Transaction { get; set; }

    public void Cancel()
    {
        MudDialog.Cancel();
    }
}
