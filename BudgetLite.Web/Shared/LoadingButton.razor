
@if (IsSubmit)
{
    <MudButton Disabled="@IsLoading" ButtonType="ButtonType.Submit" Variant="@Variant" Color="@Color">
        @if (IsLoading)
        {
            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        }
        else
        {
            <MudText>@Text</MudText>
        }
    </MudButton>
}
else
{
    <MudButton Disabled="@IsLoading" OnClick="ProcessSomething" Variant="@Variant" Color="@Color">
        @if (IsLoading)
        {
            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
        }
        else
        {
            <MudText>@Text</MudText>
        }
    </MudButton>
}


@code {
    [Parameter]
    public bool IsLoading { get; set; }
    [Parameter]
    public Action OnClick { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public bool IsSubmit { get; set; }
    [Parameter]
    public Variant Variant { get; set; }
    [Parameter]
    public Color Color { get; set; }

    async Task ProcessSomething()
    {
        OnClick.Invoke();
    }
}